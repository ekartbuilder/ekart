<?xml version="1.0" encoding="UTF-8" ?>

<themeeditor>
    <version value="1.4">
        <ccc available="true"/>
        <guest_checkout available="true"/>
        <one_page_checkout available="true"/>
        <store_locator available="true"/>
    </version>
    <author>pavothemes</author>
    <name>Live Theme Editor</name>
    <selectors>
        <items>
            <header>Body Content</header>
            <match>body</match>

            <item>
                <type>text</type>
                <label>Background Color</label>
                <selector>body</selector>
                <attrs>background-color</attrs>
            </item>

            <item>
                <type>image</type>
                <label>Background Image</label>
                <selector>body</selector>
                <attrs>background-image</attrs>
            </item>

            <item>
                <type>text</type>
                <label>Background Content</label>
                <selector>body #page</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>image</type>
                <label>Background Image</label>
                <selector>body #page</selector>
                <attrs>background-image</attrs>
            </item>

            <item>
                <type>fontsize</type>
                <label>Font-Size</label>
                <selector>body #page</selector>
                <attrs>font-size</attrs>
            </item>


            <item>
                <type>text</type>
                <label>Color Text</label>
                <selector>body #page</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Link Color</label>
                <selector>body #page a</selector>
                <attrs>color</attrs>
            </item>
        </items>

        <items>
            <header>TopBar</header>
            <match>topbar</match>
            <item>
                <type>text</type>
                <label>Background Color</label>
                <selector>#topbar</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Text</label>
                <selector>#topbar</selector>
                <attrs>color</attrs>
            </item>

            <item>
                <type>text</type>
                <label>Color Link</label>
                <selector>#topbar a</selector>
                <attrs>color</attrs>
            </item>

        </items>
        <items>
            <header>Header</header>
            <match>header-main</match>
            <item>
                <type>text</type>
                <label>Background Color</label>
                <selector>#header .header-wrap</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Text</label>
                <selector>#header</selector>
                <attrs>color</attrs>
            </item>

            <item>
                <type>text</type>
                <label>Color Link</label>
                <selector>#header a</selector>
                <attrs>color</attrs>
            </item>

        </items>
        <items>
            <header>MainMenu</header>
            <match>header-main</match>
            <item>
                <type>text</type>
                <label>Background Color</label>
                <selector>#header-main</selector>
                <attrs>background-color</attrs>
            </item>

            <item>
                <type>text</type>
                <label>Color Link</label>
                <selector>.pav-megamenu .navbar-nav li a</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Background Input</label>
                <selector>.search_header #search input</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Text Input</label>
                <selector>.search_header #search input</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Border Input</label>
                <selector>.search_header #search input</selector>
                <attrs>border-color</attrs>
            </item>
        </items>
        <items>
            <header>Promotion</header>
            <match>pav-promotion</match>
            <item>
                <type>text</type>
                <label>Background Color</label>
                <selector>#pavo-promotion</selector>
                <attrs>background-color</attrs>
            </item>
        </items>
        <items>
            <header>Footer Top</header>
            <match>footer-top</match>
            <item>
                <type>text</type>
                <label>Background Color</label>
                <selector>.footer-top</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Text</label>
                <selector>.footer-top</selector>
                <attrs>color</attrs>
            </item>

            <item>
                <type>text</type>
                <label>Color Link</label>
                <selector>.footer-top a</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>image</type>
                <label>Background Image</label>
                <selector>.footer-top</selector>
                <attrs>background-image</attrs>
            </item>
        </items>
        <items>
            <header>Footer Center</header>
            <match>footer-center</match>
            <item>
                <type>text</type>
                <label>Background Color</label>
                <selector>.footer-center</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Text</label>
                <selector>.footer-center</selector>
                <attrs>color</attrs>
            </item>

            <item>
                <type>text</type>
                <label>Color Link</label>
                <selector>.footer-center a</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>image</type>
                <label>Background Image</label>
                <selector>.footer-center</selector>
                <attrs>background-image</attrs>
            </item>
        </items>
        <items>
            <header>Powered</header>
            <match>powered</match>
            <item>
                <type>text</type>
                <label>Background Color</label>
                <selector>#powered</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Text</label>
                <selector>#powered</selector>
                <attrs>color</attrs>
            </item>

            <item>
                <type>text</type>
                <label>Color Link</label>
                <selector>#powered a</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>image</type>
                <label>Background Image</label>
                <selector>#powered</selector>
                <attrs>background-image</attrs>
            </item>

        </items>
    </selectors>
    <elements>
        <items>
            <header>Products</header>
            <match>product</match>
            <item>
                <type>text</type>
                <label>Color Price</label>
                <selector>.product-block .price</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Price New</label>
                <selector>.price .price-new</selector>
                <attrs>color</attrs>
            </item>

            <item>
                <type>text</type>
                <label>Color Price Old</label>
                <selector>.price .price-old</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Price Tax</label>
                <selector>.price .price-tax</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>BgColor Cart</label>
                <selector>.cart button.button</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Color Cart</label>
                <selector>.cart button.button</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>BgColor Wishlist</label>
                <selector>.product-block .wishlist</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>BgColor Compare</label>
                <selector>.product-block .compare</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Bg Quick View</label>
                <selector>.product_quickview</selector>
                <attrs>background-color</attrs>
            </item>
        </items>
        <items>
            <header>Category Sidebar</header>
            <match>category-modules</match>
            <item>
                <type>text</type>
                <label>Heading Background</label>
                <selector>.sidebar .category .box-heading</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Heading Color</label>
                <selector>.sidebar .category .box-heading</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Content Background</label>
                <selector>ul.box-category</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Content Color</label>
                <selector>.sidebar ul > li > a</selector>
                <attrs>color</attrs>
            </item>
        </items>
        <items>
            <header>Default Modules Sidebar</header>
            <match>modules</match>
            <item>
                <type>text</type>
                <label>Heading Background</label>
                <selector>.sidebar .box .box-heading</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Heading Color</label>
                <selector>.sidebar .box .box-heading span</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Content Background</label>
                <selector>.sidebar .box .box-content</selector>
                <attrs>background</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Bg Product Sidebar</label>
                <selector>.sidebar .product-block</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Content Color</label>
                <selector>.sidebar .box-content a</selector>
                <attrs>color</attrs>
            </item>
        </items>
    </elements>
</themeeditor>
